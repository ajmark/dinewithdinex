//- Show Purchase Status
extends layout

block content
    div.row
        div.small-12.columns.profile-pic.page-title
            img.profile-pic(src="http://graph.facebook.com/"+offer.user_id+"/picture?width=120&height=120")
            -if (!offer.completed) {
                h2=offer.fb_name + " hasn't confirmed your purchase yet."
            -} else {
                h2=offer.user_id + " completed your transaction!"
            -}
    div.row
        div.small-12
            -if (!offer.completed)
                div.button-bar.status-buttons
                    ul.button-group 
                        li.status-action
                            a.button.radius.small.secondary(href="/dashboard/" + offer.buyer_id)="Go Back"
                        li.status-action
                            a.button.small.radius.alert(onclick="rejectOffer()")= "Cancel"
           
                        